<MainWindow>
    MDBanner:
        id: banners
        over_widget: scrolls
    MDToolbar:
        id: toolbars
        title: app.title
        md_bg_color: app.theme_cls.primary_color
        elevation: 10
        right_action_items: [["magnify", lambda x: app.search_for_tasks()],["plus", lambda x: app.add_new_task()]]
        pos_hint: {"top": 1} 
    ScrollView:
        id: scrolls
        size_hint_y: None
        do_scroll_x: False
        height: root.height - toolbars.height
        GridLayout:
            height: self.minimum_height
            id: task_list
            cols: 1
            size_hint_y: None
            padding: "10dp"
            spacing: "10dp"
        